# ==============================================================================
#
# Makefile.rtm
# Build rules for Intel RTM ISA.
#
# ==============================================================================

CPPFLAGS := $(CFLAGS)
LIBS     += -lrt -lpthread -mrtm -lm -O3

# ==============================================================================
# Rules
# ==============================================================================

.PHONY: default
default: $(PROG)

.PHONY: clean
clean:
	$(RM) $(OBJS) $(PROG) $(OUTPUT)

$(PROG): $(OBJS)
	$(LD) $(LDFLAGS) $^ $(LIBS) -o $(PROG) -static

include ../common/Makefile.common


# ==============================================================================
#
# Makefile.rtm
#
# ==============================================================================

